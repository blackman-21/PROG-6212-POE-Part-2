@model CMCS.Web.Models.Claim
@{
    ViewData["Title"] = "Claim Details";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
    <h3>Claim Details</h3>

    <dl class="row">
        <dt class="col-sm-3">Lecturer</dt>
        <dd class="col-sm-9">@Model.LecturerName</dd>
        <dt class="col-sm-3">Month</dt>
        <dd class="col-sm-9">@Model.Month</dd>
        <dt class="col-sm-3">Hours</dt>
        <dd class="col-sm-9">@Model.TotalHours</dd>
        <dt class="col-sm-3">Hourly Rate</dt>
        <dd class="col-sm-9">R@Model.HourlyRate</dd>
        <dt class="col-sm-3">Total Amount</dt>
        <dd class="col-sm-9">R@String.Format("{0:N2}", Model.TotalAmount)</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
        <dt class="col-sm-3">Submitted</dt>
        <dd class="col-sm-9">@Model.SubmittedAt.ToLocalTime()</dd>
        <dt class="col-sm-3">Files</dt>
        <dd class="col-sm-9">
            @foreach (var f in Model.Uploads)
            {
                <div><a asp-action="Download" asp-route-id="@f.Id">@f.OriginalFileName</a></div>
            }
        </dd>
        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
