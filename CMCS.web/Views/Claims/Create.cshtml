@model CMCS.Web.Models.Claim
@{
    Layout = "_Layout";
}


@{ 
    ViewData["Title"] = "Submit Claim";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container py-4">
    <h2>Submit Monthly Claim</h2>

    <!-- Add Anti-Forgery Token -->
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="mt-3">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="LecturerName" class="form-label"></label>
                <input asp-for="LecturerName" class="form-control" />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Month" class="form-label"></label>
                <input asp-for="Month" class="form-control" placeholder="e.g. August 2025" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="TotalHours" class="form-label"></label>
                <input asp-for="TotalHours" class="form-control" id="hours" />
                <span asp-validation-for="TotalHours" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="HourlyRate" class="form-label"></label>
                <input asp-for="HourlyRate" class="form-control" id="rate" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label>Total Amount (R)</label>
                <input class="form-control" id="totalAmount" readonly value="R0.00" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label>Upload supporting documents (.pdf, .docx, .xlsx) - max 5MB each</label>
            <input type="file" name="files" multiple class="form-control" />
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success btn-lg">Submit Claim</button>
        </div>
    </form>

    <div class="mt-3">
        <div class="text-muted small">
            Note: Files are stored with unique names on the server. Allowed types: .pdf .docx .xlsx. Max size: 5MB.
        </div>
    </div>
</div>

<script>
    function updateTotal() {
        let h = parseFloat($('#hours').val()) || 0;
        let r = parseFloat($('#rate').val()) || 0;
        let total = (h * r).toFixed(2);
        $('#totalAmount').val('R' + total);
    }
    $(document).ready(function() {
        $('#hours, #rate').on('input', updateTotal);
        updateTotal();
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
