@model IEnumerable<CMCS.Web.Models.UploadFile>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Uploaded Documents";
}

<div class="container">
    <h3>Uploaded Documents</h3>

    @if (!Model.Any())
    {
        <p class="text-muted">No files uploaded yet.</p>
    }
    else
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>Claim ID</th>
                    <th>Original Name</th>
                    <th>Size (KB)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    <tr>
                        <td>@file.FileName</td>
                        <td>@file.ClaimId</td>
                        <td>@file.OriginalFileName</td>
                        <td>@(file.Size / 1024)</td>
                        <td>
                            <a asp-controller="Claims" asp-action="Download" asp-route-id="@file.Id" class="btn btn-sm btn-primary">Download</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
