<!DOCTYPE html>
<html lang="en"> 
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CMCS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex"> 
        <!-- Left Navigation -->
        <nav class="bg-dark text-white p-3" style="width:220px; min-height:100vh;">
            <h4 class="text-white">CMCS</h4>
            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Claims" asp-action="Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Claims" asp-action="Create">Submit Claim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Claims" asp-action="Index">Track Claims</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Claims" asp-action="Pending">Approvals</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Uploads">Uploads</a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <div class="mb-4">
                <h2>@ViewData["Title"]</h2>
            </div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top text-muted p-3 text-center">
        Prototype - no backend functionality
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
